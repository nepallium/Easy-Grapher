<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane maxHeight="700" minHeight="700" prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.PrimaryController">
    <fx:include source="InputMenu.fxml" />
    <StackPane fx:id="graphPane" layoutX="300.0" layoutY="100.0" onMouseDragged="#handleMouseDrag" onMousePressed="#handleMousePress" onScroll="#handleMouseScroll" prefHeight="600.0" prefWidth="600.0">
        <Canvas fx:id="AxesCanvas" height="600.0" width="600.0" />
        <Canvas fx:id="FunctionCanvas1" height="600.0" layoutX="10.0" layoutY="10.0" width="600.0" />
        <Canvas fx:id="FunctionCanvas2" height="600.0" layoutX="10.0" layoutY="10.0" width="600.0" />
      <Canvas fx:id="Derivative1Canvas" height="600.0" layoutX="10.0" layoutY="10.0" width="600.0" />
      <Canvas fx:id="Derivative2Canvas" height="600.0" layoutX="10.0" layoutY="10.0" width="600.0" />
    </StackPane>
    <HBox layoutX="300.0" prefHeight="100.0" prefWidth="600.0" style="-fx-background-color: lightblue;">
      <children>
         <Button fx:id="showInterceptsBtn" mnemonicParsing="false" onAction="#handleShowIntercepts" text="Show Intercepts" />
         <Label fx:id="showInterceptsLabel" text="Label" />
      </children></HBox>
</AnchorPane>
