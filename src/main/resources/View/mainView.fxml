<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="root" maxHeight="700" minHeight="700" prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.PrimaryController">
    <fx:include source="InputMenu.fxml" />
    <StackPane fx:id="graphPane" layoutX="300.0" layoutY="100.0" onMouseDragged="#handleMouseDrag" onMousePressed="#handleMousePress" onMouseReleased="#handleMouseRelease" onScroll="#handleMouseScroll" prefHeight="600.0" prefWidth="600.0">
        <Canvas fx:id="AxesCanvas" height="600.0" width="600.0" />
        <Canvas fx:id="FunctionCanvas1" height="600.0" layoutX="10.0" layoutY="10.0" width="600.0" />
        <Canvas fx:id="FunctionCanvas2" height="600.0" layoutX="10.0" layoutY="10.0" width="600.0" />
      <Canvas fx:id="Derivative1Canvas" height="600.0" layoutX="10.0" layoutY="10.0" width="600.0" />
      <Canvas fx:id="Derivative2Canvas" height="600.0" layoutX="10.0" layoutY="10.0" width="600.0" />
      <Canvas fx:id="RootCanvas" height="600.0" layoutX="10.0" layoutY="10.0" width="600.0" />
    </StackPane>
   <VBox alignment="CENTER" layoutX="300.0" prefHeight="100.0" prefWidth="600.0" style="-fx-border-width: 1 1 1 0; -fx-border-color: black;">
      <children>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 36px;" text="Easy Grapher" />
          <HBox alignment="CENTER" prefHeight="100.0" prefWidth="600.0" spacing="10.0">
            <children>
               <Button fx:id="showInterceptsBtn" mnemonicParsing="false" onAction="#handleShowIntercepts" text="Show Intercepts" />
               <Label fx:id="showInterceptsLabel" />
            </children>
         </HBox>
      </children>
   </VBox>
</AnchorPane>
